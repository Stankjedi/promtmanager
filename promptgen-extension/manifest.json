{
  "manifest_version": 3,
  "name": "프롬프트 생성기 (사이드 패널)",
  "version": "0.1.3",
  "description": "옵션 버튼으로 프롬프트를 조립하고 클립보드로 복사합니다.",
  "permissions": ["storage", "sidePanel", "contextMenus"],
  "action": {
    "default_title": "프롬프트 생성기"
  },
  "options_page": "options/options.html",
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
