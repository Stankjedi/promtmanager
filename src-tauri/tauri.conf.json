{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "promtmanager",
  "version": "0.1.8",
  "identifier": "com.promtmanager.desktop",
  "build": {
    "frontendDist": "../ui",
    "devUrl": "http://localhost:1420/sidepanel/sidepanel.html",
    "beforeDevCommand": "python3 -m http.server 1420 --directory ../ui"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "url": "sidepanel/sidepanel.html",
        "title": "프롬프트 생성기",
        "width": 980,
        "height": 720,
        "resizable": true,
        "minWidth": 700,
        "minHeight": 520,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}